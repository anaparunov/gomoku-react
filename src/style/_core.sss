html
  box-sizing: border-box
  font-size: 100%

*,
*::before,
*::after
  box-sizing: inherit

body
  background-color: var(--color-sitebg)
  font-size: var(--font-size)
  font-family: var(--font-sans)
  line-height: var(--line-height)
  font-weight: normal
  color: var(--color-text)

.wrapper
  width: 100%
  min-width: 450px
  max-width: 1024px
  margin: 0 auto
  padding: 0 20px
