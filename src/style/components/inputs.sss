input[type=number]::-webkit-inner-spin-button
  appearance: none

input[type='number']
  display: inline-block
  border: 0
  color: #000
  font-size: 18px
  padding: 10px 20px
  text-align: center
  margin: 2px 10px 1px 10px
  height: 50px
  width: 80px
  background-color: rgba(0, 0, 0, 0.1)
  font-weight: bold

  &:focus
    outline: none

